namespace byrokrat\accounting\Sie4;

/**
 * Grammar for generating a parser for Sie version 4
 *
 * Build using scato/phpeg. Please note that the concrete parser used must
 * implement the ConsumerInterface.
 *
 * @see     ConsumerInterface
 * @example "vendor/bin/phpeg generate Grammar.peg" To rebuild the parser
 */
grammar Grammar
{
    start FILE = ROW*;

    ROW = ADRESS / UNKNOWN_ROW / EMPTY_LINE;

    UNKNOWN_ROW = '#' label:[a-zA-Z]+ fields:FIELD+ EOL {
        return $this->onUnknown(implode($label), $fields);
    };

    ADRESS = '#ADRESS' kontakt:FIELD? utdelningsadr:FIELD? postadr:FIELD? tel:FIELD? END_OF_FIELD {
        return $this->onAdress((string)$kontakt, (string)$utdelningsadr, (string)$postadr, (string)$tel);
    };

    FIELD = SPACE content:CONTENT SPACE {
        return implode($content);
    };

    CONTENT = [a-zA-Z0-9]+;

    SPACE = (" " / "\t")*;

    EOL = "\r"? "\n";

    EMPTY_LINE = SPACE EOL;

    END_OF_FIELD = field* EOL;
}
